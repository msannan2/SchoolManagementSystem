<Window x:Class="DataBindingDemo.EmployeeProfileView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBindingDemo"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="" Height="550" Width="566">
    <Grid Margin="0,0,2,0">
        <Grid Background="WhiteSmoke">
            <Label Content="" Background="LightSteelBlue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="556" Height="41"/>
            <Label Content="Employee Profile View" Background="Transparent" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Top" Height="41" Width="514" FontSize="20" FontFamily="Segoe UI Semibold" FontWeight="Bold"/>
        </Grid>
        <Label Content="First Name " HorizontalAlignment="Left" Margin="6,49,0,0" VerticalAlignment="Top" Height="38" Width="85" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Last Name " HorizontalAlignment="Left" Margin="268,49,0,0" VerticalAlignment="Top" Height="38" Width="85" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Parent/Spouse"  HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" Height="38" Width="248" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Employee ID" HorizontalAlignment="Left" Margin="6,92,0,0" VerticalAlignment="Top" Height="38" Width="104" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Salary Count" HorizontalAlignment="Left" Margin="10,200,0,0" VerticalAlignment="Top" Height="38" Width="248" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Date of Birth" HorizontalAlignment="Left" Margin="268,206,0,0" VerticalAlignment="Top" Height="38" Width="98" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Joining Date" HorizontalAlignment="Left" Margin="10,238,0,0" VerticalAlignment="Top" Height="38" Width="100" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Contact 1" HorizontalAlignment="Left" Margin="10,276,0,0" VerticalAlignment="Top" Height="38" Width="85" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Contact 2" HorizontalAlignment="Left" Margin="10,314,0,0" VerticalAlignment="Top" Height="38" Width="85" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Gender" HorizontalAlignment="Left" Margin="10,352,0,0" VerticalAlignment="Top" Height="38" Width="85" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Label Content="Home Address" HorizontalAlignment="Left" Margin="10,391,0,0" VerticalAlignment="Top" Height="38" Width="112" FontSize="14" FontFamily="Segoe UI Symbol" FontWeight="Bold"/>
        <Image Name="profileImage" HorizontalAlignment="Left" Height="138" Margin="384,57,0,0" VerticalAlignment="Top" Width="135" />



        <syncfusion:MaskedTextBox Value="{Binding Employee.LastName ,Mode=TwoWay, ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" WatermarkTextIsVisible="False" HorizontalAlignment="Left" Height="23" Margin="358,57,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="179" Text="{Binding LastName}"/>
        
        <TextBox x:Name="parentname" HorizontalAlignment="Left" Height="23" Margin="254,130,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="283" Text="{Binding Employee.FatherName}"/>
        
        <syncfusion:MaskedTextBox ReadOnly="True" 
                                Value="{Binding Employee.EmployeeID ,Mode=TwoWay, ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" WatermarkTextIsVisible="False"  HorizontalAlignment="Left" Height="23" Margin="110,92,0,0" TextWrapping="NoWrap" Text="{Binding StudentID}" VerticalAlignment="Top" Width="177" />
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,206,0,0" TextWrapping="NoWrap" Text="{Binding Employee.Salary}" VerticalAlignment="Top" Width="133"/>
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="366,206,0,0" TextWrapping="NoWrap" Text="{Binding Employee.DOB}" VerticalAlignment="Top" Width="171"/>
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,243,0,0" TextWrapping="NoWrap" Text="{Binding Employee.Joining_date}" VerticalAlignment="Top" Width="133"/>
       
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,276,0,0" TextWrapping="NoWrap" Text="{Binding Employee.ContactNo1}" VerticalAlignment="Top" Width="133"/>
        
        <TextBox HorizontalAlignment="Left" Height="23" Margin="121,320,0,0" TextWrapping="NoWrap" Text="{Binding Employee.ContactNo2}" VerticalAlignment="Top" Width="133"/>
        
        <syncfusion:MaskedTextBox ReadOnly="True" Value="{Binding Employeee.FirstName ,Mode=TwoWay, ValidatesOnDataErrors=True, 
                NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" WatermarkTextIsVisible="False" HorizontalAlignment="Left" Height="23" Margin="91,57,0,0" TextWrapping="NoWrap" Text="{Binding FirstName}" VerticalAlignment="Top" Width="163" TextChanged="MaskedTextBox_TextChanged"/>

        <Button Name="btnUpdate" Click="btnUpdate_Click" Content="Edit" Margin="434,466,37,21" FontSize="16"/>
        
        <TextBox x:Name="parentname_Copy" HorizontalAlignment="Left" Height="38" Margin="121,391,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="283" Text="{Binding Employee.Address}"/>
        
        <TextBox  Text="{Binding Employee.Gender}" HorizontalAlignment="Left" Height="23" Margin="121,352,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="98" TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
